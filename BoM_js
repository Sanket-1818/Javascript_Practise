    <script>
///Getting hieght and width of the browser/////
        let inner=window.innerHeight
        console.log("Inner Height",inner)
        let outer=window.outerHeight
        console.log("outer Height",outer)
        let innerw=window.innerWidth
        console.log("Inner Width",innerw)
        let outerw=window.outerWidth
        console.log("outer Width",outerw)

////////////////////////////////////////////////////////////////////

///Opening and Closing Window///////
        function openwind(){
            window.open("","_blank","width=500px,height=400px");
        }

        function close(){
            window.close()
        }
//////////////////////////////////////


    </script>
